datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  origin       String
  description  String
  difficulty   Int
  protein      String
  produce      String
  spice        String
  cookingOil   String
  volume       Int
  serves       Int
  authenticity String
  stock        String
}
